#!/usr/bin/env ruby
$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
require 'reminder'
require 'choice'

Choice.options do
  banner "Usage: #{File.basename(__FILE__)} [-hptv]"
  header ''
  header 'Server options:'

  option :message do
    d = "How's it going you awesome person?"
    short '-m'
    long '--message=MESSAGE'
    desc "This is the actual reminder. Just type what you want you to be reminded of (default #{d})"
    default d
  end

  option :title do
    d = "Just remember..."
    short '-T'
    long '--title=TITLE'
    desc "The title of the notification. (default #{d})"
    default d
  end

  option :time do
    d = 10
    short '-t'
    long '--time=TIME'
    desc "Number of minutes between each notification (default #{d})"
    cast Integer
    default d
  end
  
  separator ''
  separator 'Common options: '

  option :version do
    short '-v'
    long '--version'
    desc 'Show version'
    action do
      puts "#{File.basename(__FILE__)} v#{Reminder::VERSION}"
      exit
    end
  end
  
end

options = Choice.choices

Reminder::Notifier.start(options)